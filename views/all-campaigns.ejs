<%- include('_layout/header') %>
<style>
  h1 {
    margin-left: 10%;
    font-size: 50px;
    color: black;
    font-weight: 700;
    font-family: "Times New Roman", Times, serif;
    margin-bottom: 20px;
    margin-top: 20px;
  }
  .contentBody {
    display: flex;
    flex-direction: column;
    justify-content: start;
    width: 90%;
    height: 80vh;
    background-color: white;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 20px;
    border-radius: 10px;
    padding: 20px;
    border: 2px solid black;
    overflow: auto;
  }
  .card {
    display: flex;
    flex-direction: row;
    justify-content: center;
    /* background-color: blue; */
    align-items: center;
    width: 100%;
    height: 100px;
  }
  .card-header {
    border-radius: 5px;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 800px;
    height: 120px;
    margin-top: 10px;
  }
  .card-body {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /* width: 700px; */
    background-color: white;
    height: 120px;
  }
  .timeContainer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 300px;
    height: 50px;
    border-radius: 5px;
    padding-left: 10px;
    margin-bottom: 10px;
  }
  .buttonContainer {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 200px;
    height: 50px;
    border-radius: 5px;
    padding-left: 10px;
    margin-bottom: 10 px;
    background-color: #3bb3de;
    color: white;
  }
</style>

<h1>All Topic</h1>
<div class="contentBody">
  <div class="row row-cols-1 row-cols-md-1">
    <% if(campaigns != ''){%> <% campaigns.forEach(function(campaign, index){ %>

    <div class="col mb-4">
      <div class="card my-3 p-3 bg-light rounded shadow-sm h-100">
        <!-- Card -->

        <div class="card">
          <div class="card-header">
            <h5><a> <%- campaign.title %> </a></h5>

            <!-- <li class="nav-item ml-auto">
                  <% if(campaign.first_closure > current){%>
                  <h5 style="color: green">Open</h5>
                  <% }else if(campaign.first_closure <= current &&
                  campaign.final_closure > current){%>
                  <h5 style="color: orange">First closure closed</h5>
                  <%}else{%>
                  <h5 style="color: red">Closed</h5>
                  <% } %>
                </li> -->
            <div class="timeContainer">
              <p class="card-text">
                <!-- First closual date:  -->
                <%- campaign.first_closure.getMonth() + 1 %>/<%-
                campaign.first_closure.getDate()%>/<%-
                campaign.first_closure.getFullYear() %> <%-
                campaign.first_closure.getHours()%>:<%-
                campaign.first_closure.getMinutes() %>
              </p>
              <p>from</p>
              <p class="card-text">
                <!-- Final closual date:  -->
                <%- campaign.final_closure.getMonth() + 1 %>/<%-
                campaign.final_closure.getDate()%>/<%-
                campaign.final_closure.getFullYear() %> <%-
                campaign.final_closure.getHours()%>:<%-
                campaign.final_closure.getMinutes() %>
              </p>
            </div>
          </div>
          <div class="card-body">
            <!-- <% if( campaign.name.length > 60){%>
            <p class="card-text"><%- campaign.name.slice(0 ,60)%> ...</p>
            <% }else{ %>
            <p class="card-text"><%- campaign.name %></p>
            <% } %> -->

            <p>
              <a
                class="buttonContainer"
                href="/campaign_detail/<%= campaign._id %>"
                role="button"
                >View Detail &raquo;</a
              >
            </p>
          </div>
        </div>

        <!-- Card -->
      </div>
    </div>

    <% }) %> <% } %>
  </div>
</div>

<%- include('_layout/footer') %>
