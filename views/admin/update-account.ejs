<%- include('../_layout/header') %>

<div class="body">
  <h2 class="page-title">Update Account</h2>
</div>

<form action="/admin/edit_account/<%= user._id %> " method="post">
  <div class="form-group">
    <label for="">Email</label>
    <input
      type="email"
      name="email"
      id=""
      value="<%= user.email %> "
      class="form-control"
      placeholder="Enter email"
      required="true"
    />
  </div>
  <div class="form-group">
    <label for="">Role</label>
    <select name="role" id="" class="form-control">
      <option value="<%= user.role %>" selected><%= user.role %></option>
      <option value="admin">admin</option>
      <option value="staff">staff</option>
      <option value="qam">qam</option>
      <option value="qac">qac</option>
    </select>
  </div>
  <div class="form-group">
    <label for="">Department</label>
    <select name="department" id="" class="form-control">
      <% if(departments != ''){%> <% departments.forEach(function(department,
      index){ %>
      <option value="<%= department.department_name %> ">
        <%= department.department_name %>
      </option>
      <% }) %> <% } %>
    </select>
  </div>
  <button class="btn btn-success submit">Submit</button>
</form>
<%- include('../_layout/footer') %>
<style>
  .submit {
    background-color: #32776b;
  }
</style>
