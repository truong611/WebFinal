<%- include('../_layout/header') %>
<style>
  .inforBody {
    display: flex;
    justify-content: start;
    align-items: center;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    height: 700px;
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    border: 2px solid black;
    overflow: auto;
  }

  .inforBody table {
    width: 100%;
    height: 90%;
    margin-left: 5%;
    margin-right: 5%;
    border-collapse: collapse;
    padding: auto;
  }

  .inforBody thead {
    background-color: #f2f2f2;
    overflow: auto;
    height: 30px;
  }

  .inforBody i {
    margin-left: 5%;
    font-size: large;
    color: black;
  }

  .inforBody thead th {
    height: 30px;
    padding: auto;
    background-color: rgba(214, 214, 214, 0.945);
  }

  .body {
    margin-left: 5%;
    margin-right: 5%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    height: 100px;
  }

  .body a {
    margin-left: 5%;
    margin-right: 5%;
    width: 200px;
    height: 50px;
    background-color: #3bb3de;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: large;
    text-decoration: none;
    cursor: pointer;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: row;
  }

  .body a:hover {
    background-color: #3bb3de;
    color: white;
  }

  .body a:active {
    background-color: #3bb3de;
    color: white;
  }

  .body a:focus {
    background-color: #3bb3de;
    color: white;
  }

  .body a:visited {
    background-color: #3bb3de;
    color: white;
  }

  .body p {
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 6%;
    font-size: large;
    color: white;
  }

  .body h2 {
    margin-left: 5%;
    margin-right: 5%;
    font-size: 50px;
    color: black;
    font-weight: 700;
    font-family: "Times New Roman", Times, serif;
  }
  .inforBody .delete i{
    color: red;
    margin-left: 30%;
  }
</style>
<div class="body">
  <h2 class="page-title">Accounts</h2>
  <a class="edit" href="/admin/create_account">
    <i class="bi bi-plus-square newAccount"></i>
    <p>Create account</p>
  </a>
</div>

<div class="inforBody">
  <table>
    <div>
      <thead>
        <tr>
          <th>Email</th>
          <th>Department</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </thead>
      <% if(users !='' ){%> <% users.forEach(function(user, index){ %>
      <tr>
        <td><%- user.email %></td>
        <td><%- user.department %></td>
        <td><%- user.role %></td>
        <td>
          <% if(user.email != 'admin@gmail.com'){ %>
          <a class="edit" href="/admin/edit_account/<%- user._id %>" class="edit">
            <i class="fas fa-edit"></i>
          </a>

          <a
            href="/admin/delete_account/<%- user._id %>"
            class="delete"
            onclick=""
          >
            <i class="fas fa-trash-alt"></i>
          </a>
          <% } %>
        </td>
      </tr>
      <% }) %> <% } %>
    </div>
  </table>
</div>

